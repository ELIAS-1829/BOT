#!/bin/bash
clear 

#codigos del creador no tocar 
creador=elias
usuario=$creador
cliente=$usuario=$creador=elias
usuario2=$usuario=$creador=$cliente="elias"


#colores 
azul="\033[38;5;31m"
rojo="\033[38;1;31m"
verd="\033[38;0;32m"
purp="\033[38;1;35m"
amar="\033[38;1;33m"

model_engine="text-davinci-003"
key=$(sed 's/ //g' /data/data/com.termux/files/usr/bin/bot.txt)
api_key="$key"
mensaje=$1
sin-coneccion(){
clear 
sl
echo -e "
$rojoâ”â”â”â”â”â”â”â”â”â”â”â”â”$azulâ€¢A surguido un error$azul â€¢$rojoâ”â”â”â”â”â”â”â”â”â”â”â”“
â”£ ğŸ©$verd Lo siento no hay coneccion a internet ğŸ© $rojoâ”«
â”£ğŸ©$verd o al server del bot  Reintente mas tardeğŸ©$rojoâ”«
â”—â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”›

"
}
banner(){
echo -e "
$azulâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”$purpâ€¢$rojo LG REYNA$purp â€¢$azulâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”“
â”£â”â”â”â”â°ï½¥ğŸ©$verd Espere buscando respuesta $azulğŸ©ï½¥â±â”â”â”â”â”«
â”—â”â”â”â”â”â”â”â”â”â”â”â”â”â€¢$amar Haking etico,$azul â€¢â”â”â”â”â”â”â”â”â”â”â”â”â”â”›
"
}
btn=&& banner
todo () {	
if [[ $mensaje == "" ]];then
	echo "      para usar el asistente escribe:"
	tput setaf 1;echo -n "         bot";tput setaf 10;echo ' " y entre dobles comillas  pregunta "'|lolcat -a -d 2
else
	respuesta=$(curl -s -X POST -H "Content-Type: application/json" -H "Authorization: Bearer $api_key" https://api.openai.com/v1/engines/$model_engine/completions -d "{\"prompt\":\"$mensaje\",\"max_tokens\":1024,\"temperature\":0.5}" | jq -r '.choices[0].text' )
	if [[ $respuesta == "" ]] || [[ $respuesta == "no hay un resultado para su busqueda " ]];then
		tput setaf 1; sin-coneccion 
		exit
	else
		tput setaf 1;echo -n "$btn:";tput setaf 10;echo -e "$respuesta"
	fi
fi
}

if [[ $usuario2 = "elias=elias=elias=elias=elias=elias" ]];then todo
else
clear
echo -e "
$azulâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”$purpâ€¢$verd LG REYNA$purp â€¢$azulâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”“
$rojo re instalando al bot por midificasiones no permitidas
$azulâ”—â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”›
"
reinstalacion(){
apt update && apt upgrade -y

pkg install git

